html, body
  height: 100%

body
  color: #673ab7
  font-family: Sans-Serif
  margin: 0
  overflow: hidden

  & > canvas
    position: absolute
    top: 45px
    left: 0px

canvas
  user-select: none

form
  > label
    display: block

    > h3
      font-size: 1em

      &.inline
        display: inline-block
        margin-right: 0.5em

    > input
      padding-left: 2px
      width: 100%

  > .actions
    display: flex
    justify-content: space-between
    margin-top: 1em

body > div > .actions
  background-color: white
  border-bottom: 1px solid rgba(103, 58, 183, 0.5)
  position: absolute
  font-size: 14px
  top: 0
  left: 0
  padding: 4px 4px 0px 4px
  width: 100%

  > button, > label
    margin-bottom: 6px
    margin-right: 0.5em

  > label
    border: 1px solid #673ab7
    border-radius: 4px
    color: #673ab7
    display: inline-block
    padding: 6px 8px 7px
    white-space: nowrap

    &:hover
      background-color: lightyellow

    > input
      border: none
      background-color: rgba(103, 58, 183, 0.19)
      border-left: 1px solid rgba(103, 58, 183, 0.5)
      border-top: 1px solid rgba(103, 58, 183, 0.5)
      color: inherit
      font-size: 1em
      padding-right: 4px
      text-align: right
      width: 30px

      &:focus
        padding-right: 3px
        margin-right: 1px

    > h2
      display: inline
      font-size: 1em
      font-weight: normal

button
  background-color: white
  border 1px solid #673ab7
  border-radius: 4px
  color: #673ab7
  cursor: pointer
  font-size: inherit
  line-height: 1em
  padding: 9px 16px

  &:hover
    background-color: lightyellow

  &:active
    background-color: #673ab7
    color: white

.tools
  background-color: rgba(103, 58, 183, 0.19)
  border-left: 1px solid rgba(103, 58, 183, 0.5)
  width: 40px
  height: 100%
  position: absolute
  right: 0
  top: 45px

  .tool
    width: 40px
    height: 40px
    background-repeat: no-repeat
    background-position: 50% 50%

